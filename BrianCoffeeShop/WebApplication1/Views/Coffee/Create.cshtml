@model WebApplication1.Models.Coffee

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Coffee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="coffee-table">
        <tr>
            <td>@Html.LabelFor(model => model.BrandID, "Brand")</td>
            <td>@Html.DropDownList("BrandID", (SelectList)ViewBag.BrandID)
                @Html.ValidationMessageFor(model => model.BrandID)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Name)</td>
            <td>@Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.PhotoFile)</td>
            <td><input type="file" name="Image" /></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Description)</td>
            <td>@Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)</td>
        </tr>
        <tr>
            <td>@Html.HiddenFor(model => model.UserName)</td>
        </tr>
    </table>
    <input type="submit" value="Create" class="btn btn-default" />
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
