@{
    ViewBag.Title = "Home Page";
}
    <div class="two-thirds columns"></div>
    <div class="fadein">
        <img id="imageSlide" alt="" src="~/Content/images/loading.gif" />
    </div>

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    var imgs = [
        "http://localhost:62364/Content/images/coffee_hearts.jpg",
        "http://localhost:62364/Content/images/Keurig-Coffeemaker.jpg",
        "http://localhost:62364/Content/images/mccafe.jpg",
        "http://localhost:62364/Content/images/mcdonaldsmocha.jpg",
        "http://localhost:62364/Content/images/nescafe_cup_beans.jpg",
        "http://localhost:62364/Content/images/starbucks_ribbonCrunch.jpg"
    ];
    var cnt = imgs.length;
    $(function () {
        setInterval(Slider, 3000);
    });

    function Slider() {
        $('#imageSlide').fadeOut("slow", function () {
            $(this).attr('src', imgs[(imgs.length++) % cnt]).fadeIn("slow");
        });
    }
</script>